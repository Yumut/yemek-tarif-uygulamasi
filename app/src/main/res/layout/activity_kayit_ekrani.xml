<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tema"
    tools:context=".Activty.KayitEkrani">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:background="@drawable/amblemm"
            android:layout_marginTop="80dp"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/giristext"
            android:gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/person" />

            <EditText
                android:id="@+id/kullaniciAdi"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_marginStart="3dp"
                android:hint="@string/ad"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/giristext"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/email" />

            <EditText
                android:id="@+id/kullaniciMail"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/giristext"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/pasword" />

            <EditText
                android:id="@+id/kullaniciSifre"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:hint="@string/sifre"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/kaydol"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buton_design"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="KATIL"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/logo"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ekmek" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/logo"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pasta" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/logo">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/patates" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="YUMMY'ye Sende Kaydol ve Lezzetleri Yakala"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold|italic" />



    </LinearLayout>



</RelativeLayout>